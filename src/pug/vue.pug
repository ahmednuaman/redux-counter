extends import/_base

block vars
  - var title = 'Redux Counter Examples: Vue'

block body
  .container#app
    .row
      .col-xs-8
        input.form-control.input-lg(v-model='count')
      .col-xs-4
        .btn-group
          button.btn.btn-default.btn-lg(v-on:click='increment') +
          button.btn.btn-default.btn-lg(v-on:click='decrement') -

  .container
    .row
      .col-xs-12
        h3 Source code
        <script src="https://gist-it.appspot.com/github/ahmednuaman/redux-counter/blob/master/src/js/vue/app.js"></script>

  script(src='vue.js')
