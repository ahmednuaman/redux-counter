{
  "name": "redux-counter",
  "version": "1.0.0",
  "description": "A simple Redux-backed counter with different front ends",
  "main": "index.js",
  "dependencies": {
    "angular": "^1.5.8",
    "autobind-decorator": "^1.3.3",
    "bootstrap": "^3.3.7",
    "handlebars": "^4.0.5",
    "jquery": "^3.1.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-lodash": "^3.2.8",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.14.0",
    "browser-sync": "^2.16.0",
    "chai": "^3.5.0",
    "concurrently": "^2.2.0",
    "html-webpack-plugin": "^2.22.0",
    "nyc": "^8.1.0",
    "on-build-webpack": "^0.1.0",
    "onchange": "^3.0.2",
    "progress-bar-webpack-plugin": "^1.9.0",
    "pug": "^2.0.0-beta6",
    "pug-loader": "^2.3.0",
    "redux-devtools": "^3.3.1",
    "sinon": "^1.17.5",
    "standard": "^8.1.0",
    "webpack": "^1.13.2"
  },
  "scripts": {
    "build": "concurrently 'rm -rf build && mkdir build' 'npm test' && concurrently 'npm run webpack -- -p' 'npm run copy'",
    "copy": "concurrently 'npm run copy:bootstrap'",
    "copy:bootstrap": "cp ./node_modules/bootstrap/dist/css/bootstrap*.min.css build/",
    "browser-sync": "node ./browser-sync.config.js",
    "local": "concurrently 'npm run browser-sync' 'npm run copy' 'npm run watch'",
    "start": "npm run local",
    "test": "concurrently 'nyc --reporter=lcov --reporter=text ava --verbose test/unit/*.spec.js' 'standard'",
    "watch": "concurrently 'npm run webpack -- --watch' 'onchange \"**/*.js\" -- standard'",
    "webpack": "webpack --colors"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahmednuaman/redux-counter.git"
  },
  "keywords": [
    "redux",
    "react",
    "angular",
    "vanilla"
  ],
  "author": "Ahmed Nuaman (ahmed@ahmednuaman.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ahmednuaman/redux-counter/issues"
  },
  "homepage": "https://github.com/ahmednuaman/redux-counter#readme",
  "ava": {
    "require": "babel-register"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      "lodash",
      "transform-decorators-legacy"
    ]
  },
  "standard": {
    "ignore": [
      "build"
    ]
  }
}
